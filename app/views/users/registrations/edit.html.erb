<div class="container-fluid">
  <div class="row">
    <%= render "sidebar" %>
		<main class="col-lg-9 px-4 ml-auto header_next">
      <h1 class="heading">アカウント編集</h1>
      <div class="inputInformation">
        <p>下記の内容をご入力の上、お進みください。</p>
      </div>
		  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
				<%= render "devise/shared/error_messages", resource: resource %>
		    <div class="field form_group">
		      <%= f.label :user_name, '名前*' %>
		      <%= f.text_field :user_name, autofocus: true, autocomplete:"user_name", class: 'form-control' %>
		    </div>
		    <div class="field form_group">
		      <%= f.label :email, 'メールアドレス*' %>
		      <%= f.email_field :email, autofocus: true, autocomplete:"email", class: 'form-control' %>
		    </div>
		    <div class="field form_group*">
		      <%= f.label :user_chess, '棋力' %>
		      <%= f.text_field :user_chess, autocomplete: "user_chess", class: 'form-control tagsinput'%>
		    </div>
		    <div class="field form_group">
		      <%= f.label :user_app, 'よく使用するアプリ*' %>
		      <%= f.text_field :user_app, autocomplete: "user_app", class: 'form-control tagsinput'%>
		    </div>
		    <div class="field form_group">
		      <%= f.label :user_time, 'よく行う持ち時間*' %>
		      <%= f.text_field :user_time, autocomplete: "user_time", class: 'form-control tagsinput'%>
		    </div>
		    <div class="field form_group">
		      <%= f.label :usr_content, '自己紹介*' %>
		      <%= f.text_area :user_content, autocomplete: "user_content", class: 'form-control'%>
		    </div>
        <div class="field form-group">
          <%= f.label :user_pref, '所在地*' %><br>
          <%= f.select :user_pref, User.user_prefs.keys, {prompt: '選択してください'}, class: 'form-control btn address_bar' %>
        </div>
				<div class="field form_group">
          <div class="d-flex">
  				  <%= f.label :user_image, 'プロフィール画像', class:"image_prof" %><br>
            <% if current_user.user_image? %>
            	<img src='<%= current_user.user_image %>' class="icon_no_link" alt="ユーザーアイコン" id="img_prev">
            <% else %>
            	<img src="/assets/profile.jpg" class="icon_no_link" alt="ユーザーアイコン" id="img_prev">
            <% end %>
          </div>
          <%= f.file_field :user_image, class: 'form-control', id: 'user_img' %>
				</div>
		    <div class="actions buttonContainer">
		      <%= f.submit "変更", class: "btn btn-primary buttonConfirm" %>
		    </div>
			<% end %>
			<%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当に削除していいですか？" }, method: :delete, class: "btn btn-danger buttondestroy" %>
		</main>
	</div>
</div>
