<div class="container-fluid">
  <div class="row">
    <%= render "sidebar" %>
    <main class="col-md-10 px-4 ml-sm-auto header_next">
			<div class="card_summary d-flex my-4">
				<div class="prifile_img">
					<% if @community.user.user_image? %>
						<img src='<%= @community.user.user_image %>' class="icon_no_link" alt="ユーザーアイコン">
						<figcaption class="balloon-name-description">
							<p><%= @community.user.user_name %></p>
						</figcaption>
					<% else %>
						<img src="/assets/profile.jpg" class="icon_no_link" alt="ユーザーアイコン">
							<figcaption class="balloon-name-description">
								<p><%= @community.user.user_name %></p>
							</figcaption>
					<% end %>
				</div>
        <div class="card mx-1">
					<div class="card-header">
						<h4><%= @community.room.room_name %></h4>
					</div>
          <div class="card-body">
            <p>開催場所：<%= @community.community_place %></p>
            <p>参加費：<%= @community.community_money %></p>
            <p>募集内容</p>
            <p class="card-text"><%= @community.community_content %></p>
            <p><%= l @community.community_limit, format: '%-m月%-d日(%a)' %></p>
            <p><%= l @community.community_date, format: '%-m月%-d日(%a) %H:%M' %></p>
            <span>#<%= @community.community_all_tag %></span>
            <p><%= l @community.created_at, format: '%-m月%-d日(%a) %H:%M' %></p>
          </div>
        </div>
			</div>
			<div class="post_message_link">
        <% if @community_users.where(community_id: @community.id).where(user_id: current_user.id).present? %>
  				<%= link_to 'チャットルーム',"/rooms/#{@room.id}", class: "btn-circle-3d mx-4", style:"text-decoration: none;" %>
        <% else %>
  				<%= link_to 'コミュニティーへ参加', communities_community_participation_path(:community => @community.id), class: "btn-circle-3d mx-4", style:"text-decoration: none;", method: :post %>
        <% end %>
  				<% if user_signed_in? %>
  					<% if @community.user_id == current_user.id %>
  						<%= link_to '編集',"/communities/#{@community.id}/edit", class: "btn-circle-3d", style:"text-decoration:none; background:#FF3366;" %>
  				  <% end %>
  			  <% end %>
		  </div>
    <%= render "community_show" %>
    <%= paginate @communities %>
		</main>
	</div>
</div>
