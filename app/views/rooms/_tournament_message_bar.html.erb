<ul class="nav flex-column sidebar_main">
  <div class="nav-link sidebar_top">
    <p class="sidebar_font">参加済みの大会</p>
  </div>
  <% @tournament_messages.each do |message| %>
    <li class="nav-item message_bar">
      <%= link_to "/rooms/#{message.room_id}/tournament" do %>
        <div class="d-flex">
          <% if message.room.tournament.user.user_image? %>
            <img src='<%= message.room.tournament.user.user_image %>' class="header_image" alt="ユーザーアイコン">
          <% else %>
            <img src="/assets/profile.jpg" class="header_image" alt="ユーザーアイコン">
          <% end %>
          <div class="messagebar_message_right ml-4">
            <p class="mypage_message_user"><%= message.room.room_name %></p>
            <p class="mypage_message_text"><%= message.message_content %></p>
          </div>
        </div>
        <span class="messagebar_date"><%= l message.created_at, format: '%m月%-d日(%a) %H:%M' %></span>
      <% end %>
    </li>
	<% end %>
  <% @tournament_no_messages.each do |tournament| %>
    <li class="nav-item message_bar">
      <%= link_to "/rooms/#{tournament.room.id}/tournament" do %>
        <div class="d-flex">
          <% if tournament.user.user_image? %>
            <img src='<%= tournament.user.user_image %>' class="header_image" alt="ユーザーアイコン">
          <% else %>
            <img src="/assets/profile.jpg" class="header_image" alt="ユーザーアイコン">
          <% end %>
          <div class="messagebar_right ml-4">
            <p class="mypage_message_user"><%= tournament.room.room_name %></p>
          </div>
        </div>
			<% end %>
    </li>
  <% end %>
</ul>
