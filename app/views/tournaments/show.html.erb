<div class="container-fluid">
  <div class="row">
    <%= render "sidebar" %>
    <main class="col-md-10 px-4 ml-sm-auto header_next">
				<div class="card_summary d-flex my-4">
					<div class="prifile_img">
						<% if @tournament.user.user_image? %>
							<img src='<%= @tournament.user.user_image %>' class="icon_no_link" alt="ユーザーアイコン">
							<figcaption class="balloon-name-description">
								<p><%= @tournament.user.user_name %></p>
							</figcaption>
						<% else %>
							<img src="/assets/profile.jpg" class="icon_no_link" alt="ユーザーアイコン">
								<figcaption class="balloon-name-description">
									<p><%= @tournament.user.user_name %></p>
								</figcaption>
						<% end %>
					</div>
          <div class="card mx-1">
						<div class="card-header">
							<h4><%= @tournament.room.room_name %></h4>
						</div>
						<div class="card-body">
							<p>対戦したいアプリ：<%= @tournament.tournament_app %></p>
							<p>棋力：<%= @tournament.tournament_chess %></p>
							<p>持ち時間：<%= @tournament.tournament_time %></p>
							<p>募集内容</p>
							<p class="card-text"><%= @tournament.tournament_content %></p>
							<p><%= @tournament.tournament_number_of_people %></p>
							<p><%= l @tournament.tournament_limit, format: '%-m月%-d日(%a)' %></p>
							<p><%= l @tournament.tournament_date, format: '%-m月%-d日(%a) %H:%M' %></p
              <span>#<%= @tournament.tournament_all_tag %></span>
							<p><%= l @tournament.created_at, format: '%-m月%-d日(%a) %H:%M' %></p>
						</div>
					</div>
				</div>
				<div class="post_message_link">
          <% if @tournament_users.where(tournament_id: @tournament.id).where(user_id: current_user.id).present? %>
					  <%= link_to 'チャットルームへ',"/rooms/#{@room.id}", class: "btn-circle-3d mx-4", style:"text-decoration: none;" %>
          <% else %>
					  <%= link_to '大会へ参加', tournaments_tournament_participation_path(:tournament => @tournament.id), class: "btn-circle-3d mx-4", style:"text-decoration: none;", method: :post %>
          <% end %>
					<% if user_signed_in? %>
						<% if @tournament.user_id == current_user.id %>
							<%= link_to '編集',"/tournaments/#{@tournament.id}/edit", class: "btn-circle-3d", style:"text-decoration:none; background:#FF3366;" %>
					<% end %>
				<% end %>
			</div>
      <%= render "tournament_show" %>
      <%= paginate @tournaments %>
		</main>
	</div>
</div>
