<!DOCTYPE html>
<html>
  <head>
    <title>Shogicom</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= favicon_link_tag('/favicon.ico') %>
    <%= include_gon %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <%= render 'header' %>
    <% if notice %>
      <p class="alert alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-error"><%= alert %></p>
    <% end %>
    <%= yield %>
    <% unless controller.action_name == 'show' || controller.action_name == 'index' || controller.action_name == 'search_community' %>
      <%= render 'footer_menu' %>
    <% end %>
    <% if controller.action_name == 'show' || controller.action_name == 'index' || controller.action_name == 'search_community' %>
      <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['SECRET_KEY'] %>" async defer></script>
    <% end %>
  </body>
</html>
