<div class="message" id="message-<%= message.id %>">
  <% unless current_user.id == message.user.id %>
    <div class="balloon">
      <figure class="balloon-name-left" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
        <img src="" alt="no-img">
        <figcaption class="balloon-name-description">
          <p><%= message.user.user_name %></p>
        </figcaption>
      </figure>
      <div class="collapse" id="collapseExample">
        <div class="card card-body">
          <a href="<%= "/tops/#{message.user_id}" %>" class="btn btn-primary">プロフィール</a>
          <%= link_to '個人用チャットルーム', rooms_create_private_room_path(:user_id => message.user_id), class: "btn btn-warning buttonConfirm post", method: :post  %>
        </div>
      </div>
      <div class="balloon-text-left">
        <%= simple_format(h message.message_content) %>
        <p><%= l message.created_at, format: '%Y年%-m月%-d日(%a) %H:%M' %></p>
      </div>
    </div>
  <% else %>
    <div class="balloon">
      <div class="balloon-text-right">
        <%= simple_format(h message.message_content) %>
        <p><%= l message.created_at, format: '%Y年%-m月%-d日(%a) %H:%M' %></p>
     </div>
    </div>
  <% end %>
</div>
