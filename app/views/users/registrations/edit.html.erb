<div class="container-fluid">
  <div class="row">
    <%= render "sidebar" %>
		<main class="col-md-10 px-4 ml-sm-auto header_next">
			<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
				<div class="alert alert-warning" role="alert">
			  	<%= resource.unconfirmed_email %>のメール認証待ちです。
				</div>
			<% end %>

			<h1>会員登録内容変更</h1>
		  	<p>下記のご登録内容を変更してください。</p>
		  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
				<%= render "devise/shared/error_messages", resource: resource %>
		    <div class="field form_group">
		      <%= f.label :user_name, '名前*' %>
		      <%= f.text_field :user_name, autofocus: true, autocomplete:"user_name", class: 'form-control' %>
		    </div>
		    <div class="field form_group">
		      <%= f.label :email, 'メールアドレス*' %>
		      <%= f.email_field :email, autofocus: true, autocomplete:"email", class: 'form-control' %>
		    </div>
		    <div class="field form_group*">
		      <%= f.label :user_chess, '棋力' %>
		      <%= f.text_field :user_chess, autocomplete: "user_chess", class: 'form-control tagsinput'%>
		    </div>
		    <div class="field form_group">
		      <%= f.label :user_app, 'よく使用するアプリ*' %>
		      <%= f.text_field :user_app, autocomplete: "user_app", class: 'form-control tagsinput'%>
		    </div>
		    <div class="field form_group">
		      <%= f.label :user_time, 'よく行う持ち時間*' %>
		      <%= f.text_field :user_time, autocomplete: "user_time", class: 'form-control tagsinput'%>
		    </div>
		    <div class="field form_group">
		      <%= f.label :usr_content, '自己紹介*' %>
		      <%= f.text_area :user_content, autocomplete: "user_content", class: 'form-control'%>
		    </div>
		    <div class="field form-group">
		      <%= f.label :user_pref, '所在地' %><br>
		      <%= f.select :user_pref, User.user_prefs.keys, {prompt: '選択してください'}, class: 'form-control btn btn-info' %>
		    </div>

				<div class="field form_group">
					<%= f.label :user_image, 'プロフィール画像' %><br>
					<%= f.file_field :user_image, class: 'form-control' %>
				</div>

		    <div class="actions buttonContainer">
		      <%= f.submit "変更", class: "btn btn-primary buttonConfirm" %>
		    </div>
			<% end %>

			<%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当に削除していいですか？" }, method: :delete, class: "btn btn-danger buttondestroy" %>
		</main>
	</div>
</div>
