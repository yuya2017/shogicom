<div class="container-fluid">
  <div class="row">
    <%= render "sidebar" %>
    <main class="col-md-10 px-4 ml-sm-auto header_next">
			<div class="main title">
				<h2>オンライン対戦投稿</h2>
			</div>
			<%= form_with model: @post, local: true do |f| %>
				<% if @post.errors.any? %>
					<div id="error_explanation">
						<h3 style="color:red;">
							<%= I18n.t("errors.messages.not_saved",
												count: @post.errors.count,
												resource: @post.class.model_name.human.downcase)
							%>
						</h3>
						<ul>
							<% @post.errors.full_messages.each do |message| %>
							<li><%= message %></li>
							<% end %>
						</ul>
					</div>
				<% end %>
				<%= f.fields_for :room do |i| %>
					<div class="form-group">
						<%= i.label :room_name, '部屋名*' %>
						<%= i.text_field :room_name, class: 'form-control'%>
						<small class="form-text text-muted">
							部屋の名前を決めてください。
						</small>
					</div>
				<% end %>
				<div class="form-group">
					<%= f.label :post_chess, '棋力*' %>
					<%= f.text_field :post_chess, class: 'form-control',value: current_user.user_chess %>
					<small class="form-text text-muted">
						対戦したい方の棋力を入力してください。
					</small>
				</div>
				<div class="form-group">
					<%= f.label :post_app, '使用するアプリ*' %>
					<%= f.text_field :post_app, class: 'form-control',value: current_user.user_app %>
					<small class="form-text text-muted">
						希望するアプリを入力してください。
					</small>
				</div>
				<div class="form-group">
					<%= f.label :post_time, '対戦時間*' %>
					<%= f.text_field :post_time, class: 'form-control',value: current_user.user_time %>
					<small class="form-text text-muted">
						希望する対戦時間を入力してください。
					</small>
				</div>
				<div class="form-group">
					<%= f.label :post_all_tag, 'タグ' %>
					<%= f.text_field :post_all_tag, class: 'form-control'%>
					<small class="form-text text-muted">
						好きなタグをつけることができます。
					</small>
				</div>
				<div class="form-group">
					<%= f.label :post_content, '募集内容' %>
					<%= f.text_area :post_content, class: 'form-control'%>
					<small class="form-text text-muted">
						募集内容を入力してください。
					</small>
				</div>
				<div class="buttonContainer">
					<%= f.submit '投稿', class: 'btn btn-primary buttonConfirm' %>
				</div>
			<% end %>
		</main>
	</div>
</div>
